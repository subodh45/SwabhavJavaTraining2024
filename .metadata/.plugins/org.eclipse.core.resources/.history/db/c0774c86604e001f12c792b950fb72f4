package com.aurionpro.solution.model;

import com.aurionpro.violation.model.DBLoger;

public class TaxCalculator {

	private DBLoger dbBlogger;
	private Filelogger filelogger;

	public TaxCalculator(DBLoger dbBlogger, Filelogger filelogger) {
		super();
		this.dbBlogger = dbBlogger;
		this.filelogger =filelogger;
	}

	public DBLoger getDbBlogger() {
		return dbBlogger;
	}

	public void setDbBlogger(DBLoger dbBlogger) {
		this.dbBlogger = dbBlogger;
	}
	
	public Filelogger getFilelogger() {
		return filelogger;
	}

	public void setFilelogger(Filelogger filelogger) {
		this.filelogger = filelogger;
	}

	public int CaluclateTax(int amount ,int rate)
	{
		int tax =0;
	    try {
			  tax = amount/rate;		
				}
		catch(Exception exception)
		{
			new DBLoger().log("Divideing by zero");
		}
		return tax;
	}

}
