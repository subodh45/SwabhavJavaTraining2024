package com.aurionpro.game.test;
import java.util.Scanner;

import com.aurionpro.game.model.*;

public class GameTesting {
public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);
	Marker game[][]= {{Marker._,Marker._,Marker._},{Marker._,Marker._,Marker._},{Marker._,Marker._,Marker._}} ;
	Board board = new Board(game);
	
	Player1 player1 = new Player1(game);
	Player2 player2 = new Player2(game);
	
	
	for(int i=1;i<10; i++)
	{
		if(i%2!=0)
		{
			int row = getRow(scanner);
			int column= getColumn(scanner);
			player1.putValue(row, column, Marker.O );
			return;
		}

		int row = getRow(scanner);
		int column= getColumn(scanner);
		player2.putValue(row, column, Marker.X );
		
	}
	player1.putValue(2, 1, Marker.O );
	player2.putValue(1, 2, Marker.X );
	board.display();
	System.out.println();
	player1.putValue(2, 0, Marker.O );
	player2.putValue(2, 2, Marker.X );
	board.display();
    System.out.println();
	player2.putValue(1, 1, Marker.O );
	player1.putValue(1, 0, Marker.X );
	player2.putValue(0, 1, Marker.O );
	board.display();
	System.out.println();
	player1.putValue(0, 0, Marker.X );
	player2.putValue(0, 2, Marker.O );
	
	//we can access through board as well as throgh plater
	board.display();
}

private static int getColumn(Scanner scanner) {
	System.out.println("enter column position ");
	return scanner.nextInt();
}

private static int getRow(Scanner scanner) {
	System.out.println("enter row position ");
	return scanner.nextInt();
	}


}
