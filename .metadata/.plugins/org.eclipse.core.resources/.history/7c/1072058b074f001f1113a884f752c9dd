import com.aurionpro.guitar.model.*;

public class GuitarTester {
public static void main(String[] args) {
	

  
  List<Guitar> guitars = new ArrayList<Guitar>();
  
  Inventory inventory = new Inventory();
  
  initializeInventory(inventory);
  
  Guitar WhatErinLikes = new Guitar("2" ,6000,Builder.FENDER,"stratocastor",Type.ELECTRIC, Wood.ALDER, Wood.ALDER);
  
  List resguitars = inventory.search(WhatErinLikes);  
  
  if(resguitars != null)
  {   System.out.println("You might Likes this Guitars :");
    
      for(iterator i = resguitars.iterator();)
      {	  
        
	     System.out.println("Erin , you might like "+
            resguitar.getBuilder() +" "+ resguitar.getModel()
            +" "+ resguitar.getType() +" Guitar:\n" +
            " "+ resguitar.getBackWood() +" back and side ,\n "+
             resguitar.getTopWood() + " price is only "+
            resguitar.getPrice()
	      );
      }  
  }
  else
  {
	  System.out.println("Sorry Erin , we have nothing for you");
  }
}

private static void initializeInventory(Inventory inventory) {
	// TODO Auto-generated method stub
	// inventory.addGuitar("1" ,5500,"Builder","model","type", "backwood", "topWood");
	 inventory.addGuitar("2" ,6000,Builder.FENDER,"stratocastor",Type.ELECTRIC, Wood.ALDER, Wood.ALDER);
	 inventory.addGuitar("3" ,6000,Builder.FENDER,"stratocastor",Type.ACOUSTIC, Wood.ALDER, Wood.ALDER);
	 inventory.addGuitar("4" ,8000,Builder.FENDER,"stratocastor",Type.ELECTRIC, Wood.ALDER, Wood.ALDER);
	 inventory.addGuitar("1" ,6000,Builder.COLLINGS,"stratocastor",Type.ELECTRIC, Wood.ADIRONDACK, Wood.CEDAR);
	 
}
}
