package com.aurionpro.game.model;

import java.util.Scanner;

public class GameFacade{

	Scanner scanner = new Scanner(System.in);
	
	Marker game[][] = { { Marker._, Marker._, Marker._ }, { Marker._, Marker._, Marker._ },
			{ Marker._, Marker._, Marker._ } };
	Board board = new Board(game);

	Player1 player1 = new Player1(game);
	Player2 player2 = new Player2(game);
	
	{
	for(int i=1;i<10;i++)
	{
		if(i%2==0)
		{
			play(player1,i);
			
		}
		if(i%2!=0)
		{
			play2(player2,i);
		}
	}
	
	private void play(Player1 player1,int i) {
		
		if(!player1.addValue())
			{
				i--;   
				board.display();
				continue;
			}
			board.display();
			
		if (board.checkWin())
				return;
	}

	private void play2(Player2 player22,int i){
		
		if(!player2.addValue())
			{
			   i--;   
			   board.display();
			   continue;
			}
			board.display();
			
		if (board.checkWin())
				return;
	}
}
