package com.aurionpro.game.model;

import java.util.Scanner;

public class GameFacade{

	Scanner scanner = new Scanner(System.in);
	
	Marker game[][] = { { Marker._, Marker._, Marker._ }, { Marker._, Marker._, Marker._ },
			{ Marker._, Marker._, Marker._ } };
	Board board = new Board(game);

	Player1 players1 = new Player1(game);
	Player2 players2 = new Player2(game);
	
	
	for(int i=1;i<10;i++)
	{
		if(i%2==0)
		{
			play(players1,i);
			
		}
		if(i%2!=0)
		{
			play2(players2,i);
		}
	}
	
	private void play(Player1 players1,int i) {
		
		if(!players1.addValue())
			{
				i--;   
				board.display();
				continue;
			}
			board.display();
			
		if (board.checkWin())
				return;
	}

	private void play2(Player2 players2,int i){
		
		if(!players2.addValue())
			{
			   i--;   
			   board.display();
			   continue;
			}
			board.display();
			
		if (board.checkWin())
				return;
	}
	
}
